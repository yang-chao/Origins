<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/empty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_base_main"
    android:visibility="gone">

    <View
        android:id="@+id/place_holder"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/empty_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/place_holder"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_net_err" />

    <TextView
        android:id="@+id/empty_text"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_below="@id/place_holder"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:text="@string/err_retry"
        android:textColor="@color/tc_grey"
        android:textSize="14sp" />
</RelativeLayout>